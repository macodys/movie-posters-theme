<div class="product-page">
  <div class="product-container">
    <div class="product-gallery">
      <div class="product-image-main">
        {% if product.featured_image %}
          <img src="{{ product.featured_image | image_url: width: 800 }}" 
               alt="{{ product.featured_image.alt | escape }}"
               id="main-product-image">
        {% else %}
          <div class="placeholder-image">
            <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <circle cx="8.5" cy="8.5" r="1.5"></circle>
              <polyline points="21,15 16,10 5,21"></polyline>
            </svg>
          </div>
        {% endif %}
      </div>
      
      {% if product.images.size > 1 %}
        <div class="product-thumbnails">
          {% for image in product.images limit: 4 %}
            <div class="thumbnail-item {% if forloop.first %}active{% endif %}" 
                 data-image="{{ image | image_url: width: 800 }}">
              <img src="{{ image | image_url: width: 200 }}" 
                   alt="{{ image.alt | escape }}"
                   loading="lazy">
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div class="product-details">
      <div class="product-header">
        <h1 class="product-title">{{ product.title }}</h1>
        <div class="product-price">
          <span class="price">{{ product.price | money }}</span>
          {% if product.compare_at_price > product.price %}
            <span class="compare-price">{{ product.compare_at_price | money }}</span>
            <span class="sale-badge">Sale</span>
          {% endif %}
        </div>
      </div>

      {% if product.description != blank %}
        <div class="product-description">
          {{ product.description }}
        </div>
      {% endif %}

      <form action="/cart/add" method="post" enctype="multipart/form-data" class="product-form">
        {% unless product.has_only_default_variant %}
          <div class="product-options">
            {% for option in product.options_with_values %}
              <div class="option-group">
                <label for="option-{{ forloop.index }}" class="option-label">
                  {{ option.name }}
                </label>
                <select name="id" id="option-{{ forloop.index }}" class="option-select">
                  {% for value in option.values %}
                    <option value="{{ product.variants[forloop.index0].id }}" 
                            {% if product.variants[forloop.index0] == product.selected_or_first_available_variant %}selected{% endif %}>
                      {{ value }}
                    </option>
                  {% endfor %}
                </select>
              </div>
            {% endfor %}
          </div>
        {% endunless %}

        <div class="product-actions">
          <div class="quantity-selector">
            <label for="quantity" class="quantity-label">Quantity</label>
            <div class="quantity-controls">
              <button type="button" class="quantity-btn minus" data-action="decrease">-</button>
              <input type="number" id="quantity" name="quantity" value="1" min="1" class="quantity-input">
              <button type="button" class="quantity-btn plus" data-action="increase">+</button>
            </div>
          </div>

          <button type="submit" class="add-to-cart-btn" {% unless product.available %}disabled{% endunless %}>
            {% if product.available %}
              Add to Cart
            {% else %}
              Sold Out
            {% endif %}
          </button>
        </div>
      </form>

      {% if product.metafields.custom.category %}
        <div class="product-category">
          <span class="category-label">Category:</span>
          <span class="category-value">{{ product.metafields.custom.category }}</span>
        </div>
      {% endif %}
    </div>
  </div>

  {% if product.images.size > 1 %}
    <div class="product-recommendations">
      <h2>Related Posters</h2>
      <div class="recommendations-grid">
        {% for product in collections[product.metafields.custom.category | default: 'all'].products limit: 4 %}
          {% unless product.handle == product.handle %}
            <div class="recommendation-card">
              <a href="{{ product.url }}">
                <div class="recommendation-image">
                  {% if product.featured_image %}
                    <img src="{{ product.featured_image | image_url: width: 300 }}" 
                         alt="{{ product.featured_image.alt | escape }}"
                         loading="lazy">
                  {% endif %}
                </div>
                <div class="recommendation-info">
                  <h3>{{ product.title }}</h3>
                  <span class="price">{{ product.price | money }}</span>
                </div>
              </a>
            </div>
          {% endunless %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // 3D Normal Mapping Effect for Main Product Image
  const mainImage = document.getElementById('main-product-image');
  const productImageMain = document.querySelector('.product-image-main');
  
  if (mainImage && productImageMain) {
    productImageMain.addEventListener('mousemove', (e) => {
      const rect = productImageMain.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      const centerX = rect.width / 2;
      const centerY = rect.height / 2;
      
      // Calculate relative position as percentage
      const relativeX = (x / rect.width) * 100;
      const relativeY = (y / rect.height) * 100;
      
      // Calculate 3D tilt based on mouse position
      const rotateX = (y - centerY) / 20;
      const rotateY = (centerX - x) / 20;
      
      // Update CSS variables for light source and 3D effect
      productImageMain.style.setProperty('--mouse-x', `${relativeX}%`);
      productImageMain.style.setProperty('--mouse-y', `${relativeY}%`);
      productImageMain.style.setProperty('--rotate-x', `${rotateX}deg`);
      productImageMain.style.setProperty('--rotate-y', `${rotateY}deg`);
      
      // Apply 3D transform to the image
      mainImage.style.transform = `scale(1.02) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
    });

    productImageMain.addEventListener('mouseleave', () => {
      productImageMain.style.setProperty('--mouse-x', '50%');
      productImageMain.style.setProperty('--mouse-y', '50%');
      productImageMain.style.setProperty('--rotate-x', '0deg');
      productImageMain.style.setProperty('--rotate-y', '0deg');
      
      // Reset image transform
      mainImage.style.transform = 'scale(1.02) rotateX(0deg) rotateY(0deg)';
    });
  }

  // Thumbnail switching
  const thumbnails = document.querySelectorAll('.thumbnail-item');
  const mainImageEl = document.getElementById('main-product-image');
  
  thumbnails.forEach(thumbnail => {
    thumbnail.addEventListener('click', () => {
      const imageUrl = thumbnail.dataset.image;
      
      // Update active thumbnail
      thumbnails.forEach(t => t.classList.remove('active'));
      thumbnail.classList.add('active');
      
      // Update main image
      if (mainImageEl) {
        mainImageEl.src = imageUrl;
      }
    });
  });

  // Quantity controls
  const quantityInput = document.getElementById('quantity');
  const quantityBtns = document.querySelectorAll('.quantity-btn');
  
  quantityBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const action = btn.dataset.action;
      const currentValue = parseInt(quantityInput.value);
      
      if (action === 'increase') {
        quantityInput.value = currentValue + 1;
      } else if (action === 'decrease' && currentValue > 1) {
        quantityInput.value = currentValue - 1;
      }
    });
  });

  // Add to cart form
  const productForm = document.querySelector('.product-form');
  if (productForm) {
    productForm.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const quantity = formData.get('quantity');
      const variantId = formData.get('id');
      
      // Add to cart logic would go here
      console.log('Adding to cart:', { variantId, quantity });
      
      // Show success message
      const addToCartBtn = this.querySelector('.add-to-cart-btn');
      const originalText = addToCartBtn.textContent;
      addToCartBtn.textContent = 'Added!';
      addToCartBtn.style.background = 'var(--accent)';
      
      setTimeout(() => {
        addToCartBtn.textContent = originalText;
        addToCartBtn.style.background = '';
      }, 2000);
    });
  }
});
</script>