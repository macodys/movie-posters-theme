<div class="product-page">
  <div class="product-container">
    <div class="product-gallery">
      <div class="product-image-main">
        {% if product.featured_image %}
          <img src="{{ product.featured_image | image_url: width: 800 }}" 
               alt="{{ product.featured_image.alt | escape }}"
               id="main-product-image">
        {% else %}
          <div class="placeholder-image">
            <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <circle cx="8.5" cy="8.5" r="1.5"></circle>
              <polyline points="21,15 16,10 5,21"></polyline>
            </svg>
          </div>
        {% endif %}
      </div>
      
      {% if product.images.size > 1 %}
        <div class="product-thumbnails">
          {% for image in product.images limit: 4 %}
            <div class="thumbnail-item {% if forloop.first %}active{% endif %}" 
                 data-image="{{ image | image_url: width: 800 }}">
              <img src="{{ image | image_url: width: 200 }}" 
                   alt="{{ image.alt | escape }}"
                   loading="lazy">
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div class="product-details">
      <div class="product-header">
        <h1 class="product-title">{{ product.title }}</h1>
        <div class="product-price">
          <span class="price">{{ product.price | money }}</span>
          {% if product.compare_at_price > product.price %}
            <span class="compare-price">{{ product.compare_at_price | money }}</span>
            <span class="sale-badge">Sale</span>
          {% endif %}
        </div>
      </div>

      {% if product.description != blank %}
        <div class="product-description">
          {{ product.description }}
        </div>
      {% endif %}

      <form action="/cart/add" method="post" enctype="multipart/form-data" class="product-form">
        {% unless product.has_only_default_variant %}
          <div class="product-options">
            {% for option in product.options_with_values %}
              <div class="option-group">
                <label for="option-{{ forloop.index }}" class="option-label">
                  {{ option.name }}
                </label>
                <select name="id" id="option-{{ forloop.index }}" class="option-select">
                  {% for value in option.values %}
                    {% comment %} Find the variant that matches this option value {% endcomment %}
                    {% assign matching_variant = null %}
                    {% for variant in product.variants %}
                      {% if option.position == 1 and variant.option1 == value %}
                        {% assign matching_variant = variant %}
                        {% break %}
                      {% elsif option.position == 2 and variant.option2 == value %}
                        {% assign matching_variant = variant %}
                        {% break %}
                      {% elsif option.position == 3 and variant.option3 == value %}
                        {% assign matching_variant = variant %}
                        {% break %}
                      {% endif %}
                    {% endfor %}
                    <option value="{{ matching_variant.id | default: product.variants.first.id }}" 
                            {% if matching_variant == product.selected_or_first_available_variant %}selected{% endif %}>
                      {{ value }}
                    </option>
                  {% endfor %}
                </select>
              </div>
            {% endfor %}
          </div>
        {% endunless %}

        <div class="product-actions">
          <div class="quantity-selector">
            <label for="quantity" class="quantity-label">Quantity</label>
            <div class="quantity-controls">
              <button type="button" class="quantity-btn minus" data-action="decrease">-</button>
              <input type="number" id="quantity" name="quantity" value="1" min="1" class="quantity-input">
              <button type="button" class="quantity-btn plus" data-action="increase">+</button>
            </div>
          </div>

          <button type="submit" class="add-to-cart-btn" {% unless product.available %}disabled{% endunless %}>
            {% if product.available %}
              Add to Cart
            {% else %}
              Sold Out
            {% endif %}
          </button>
        </div>
      </form>

      {% if product.metafields.custom.category %}
        <div class="product-category">
          <span class="category-label">Category:</span>
          <span class="category-value">{{ product.metafields.custom.category }}</span>
        </div>
      {% endif %}
    </div>
  </div>

  {% if product.images.size > 1 %}
    <div class="product-recommendations">
      <h2>Related Posters</h2>
      <div class="recommendations-grid">
        {% for product in collections[product.metafields.custom.category | default: 'all'].products limit: 4 %}
          {% unless product.handle == product.handle %}
            <div class="recommendation-card">
              <a href="{{ product.url }}">
                <div class="recommendation-image">
                  {% if product.featured_image %}
                    <img src="{{ product.featured_image | image_url: width: 300 }}" 
                         alt="{{ product.featured_image.alt | escape }}"
                         loading="lazy">
                  {% endif %}
                </div>
                <div class="recommendation-info">
                  <h3>{{ product.title }}</h3>
                  <span class="price">{{ product.price | money }}</span>
                </div>
              </a>
            </div>
          {% endunless %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // WebGL Normal Mapping Effect will be initialized by normal-mapping.js

  // Thumbnail switching
  const thumbnails = document.querySelectorAll('.thumbnail-item');
  const mainImageEl = document.getElementById('main-product-image');
  
  thumbnails.forEach(thumbnail => {
    thumbnail.addEventListener('click', () => {
      const imageUrl = thumbnail.dataset.image;
      
      // Update active thumbnail
      thumbnails.forEach(t => t.classList.remove('active'));
      thumbnail.classList.add('active');
      
      // Update main image
      if (mainImageEl) {
        mainImageEl.src = imageUrl;
      }
    });
  });

  // Quantity controls
  const quantityInput = document.getElementById('quantity');
  const quantityBtns = document.querySelectorAll('.quantity-btn');
  
  quantityBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const action = btn.dataset.action;
      const currentValue = parseInt(quantityInput.value);
      
      if (action === 'increase') {
        quantityInput.value = currentValue + 1;
      } else if (action === 'decrease' && currentValue > 1) {
        quantityInput.value = currentValue - 1;
      }
    });
  });

  // Add to cart form
  const productForm = document.querySelector('.product-form');
  if (productForm) {
    productForm.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const quantity = parseInt(formData.get('quantity'));
      const variantId = formData.get('id');
      
      // Get product data
      const productData = {
        id: variantId || '{{ product.selected_or_first_available_variant.id }}',
        title: '{{ product.title | escape }}',
        price: {{ product.selected_or_first_available_variant.price | divided_by: 100.0 }},
        image: '{{ product.featured_image | image_url: width: 200 }}',
        variant: '{{ product.selected_or_first_available_variant.title | escape }}',
        quantity: quantity
      };
      
      // Add to cart
      if (typeof addToCart === 'function') {
        addToCart(productData);
      }
      
      // Show success message
      const addToCartBtn = this.querySelector('.add-to-cart-btn');
      const originalText = addToCartBtn.textContent;
      addToCartBtn.textContent = 'Added!';
      addToCartBtn.style.background = 'var(--accent)';
      
      setTimeout(() => {
        addToCartBtn.textContent = originalText;
        addToCartBtn.style.background = '';
      }, 2000);
    });
  }
});
</script>

<script>
  window.normalMapUrl = '{{ "Poster_Normal.png" | asset_url }}';
</script>
<script src="{{ 'normal-mapping-clean.js' | asset_url }}" defer></script>
<script src="{{ 'cart.js' | asset_url }}" defer></script>
<script src="{{ 'product-variants.js' | asset_url }}" defer></script>