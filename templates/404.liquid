{% comment %}
  The 404 template
{% endcomment %}

<div class="error-page">
  <h1>404</h1>
  <div class="cloak__wrapper">
    <div class="cloak__container">
      <div class="cloak"></div>
    </div>
  </div>
  <div class="info">
    <h2>We can't find that page</h2>
    <p>We're fairly sure that page used to be here, but seems to have gone missing. We do apologise on it's behalf.</p>
    <a href="/" class="home-button">Home</a>
  </div>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@800&family=Roboto:wght@100;300&display=swap');

  :root {
    --button: hsl(44, 0%, 70%);
    --button-color: hsl(0, 0%, 4%);
    --shadow: hsl(0, 0%, 0%);
    --bg: hsl(53, 0%, 45%);
    --header: hsl(53, 0%, 48%);
    --color: hsl(0, 0%, 98%);
    --lit-header: hsl(53, 0%, 90%);
    --speed: 2s;
  }

  @property --swing-x {
    initial-value: 0;
    inherits: false;
    syntax: '<integer>';
  }

  @property --swing-y {
    initial-value: 0;
    inherits: false;
    syntax: '<integer>';
  }

  .error-page {
    min-height: 100vh;
    display: flex;
    font-family: 'Roboto', sans-serif;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: var(--bg);
    color: var(--color);
    perspective: 1200px;
    position: relative;
    overflow: hidden;
  }

  .error-page * {
    box-sizing: border-box;
    transform-style: preserve-3d;
  }

  .error-page a {
    text-transform: uppercase;
    text-decoration: none;
    background: var(--button);
    color: var(--button-color);
    padding: 1rem 4rem;
    border-radius: 4rem;
    font-size: 0.875rem;
    letter-spacing: 0.05rem;
    transition: all 0.3s ease;
  }

  .error-page a:hover {
    background: var(--lit-header);
    color: var(--button-color);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  .error-page p {
    font-weight: 100;
  }

  .error-page h1 {
    animation: swing var(--speed) infinite alternate ease-in-out;
    font-size: clamp(5rem, 40vmin, 20rem);
    font-family: 'Open Sans', sans-serif;
    margin: 0;
    margin-bottom: 1rem;
    letter-spacing: 1rem;
    transform: translate3d(0, 0, 0vmin);
    --x: calc(50% + (var(--swing-x) * 0.5) * 1%);
    background: radial-gradient(var(--lit-header), var(--header) 45%) var(--x) 100% / 200% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    position: relative;
  }

  .error-page h1:after {
    animation: swing var(--speed) infinite alternate ease-in-out;
    content: "404";
    position: absolute;
    top: 0;
    left: 0;
    color: var(--shadow);
    filter: blur(1.5vmin);
    transform: scale(1.05) translate3d(0, 12%, -10vmin) translate(calc((var(--swing-x, 0) * 0.05) * 1%), calc((var(--swing-y) * 0.05) * 1%));
    z-index: -1;
  }

  .cloak {
    animation: swing var(--speed) infinite alternate-reverse ease-in-out;
    height: 100%;
    width: 100%;
    transform-origin: 50% 30%;
    transform: rotate(calc(var(--swing-x) * -0.25deg));
    background: radial-gradient(40% 40% at 50% 42%, transparent, black 35%);
  }

  .cloak__wrapper {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    overflow: hidden;
    z-index: -1;
  }

  .cloak__container {
    height: 250vmax;
    width: 250vmax;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .info {
    text-align: center;
    line-height: 1.5;
    max-width: clamp(16rem, 90vmin, 25rem);
    z-index: 1;
    position: relative;
  }

  .info > p {
    margin-bottom: 3rem;
  }

  .info h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    font-weight: 300;
  }

  @keyframes swing {
    0% {
      --swing-x: -100;
      --swing-y: -100;
    }
    50% {
      --swing-y: 0;
    }
    100% {
      --swing-y: -100;
      --swing-x: 100;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .error-page h1 {
      letter-spacing: 0.5rem;
    }
    
    .error-page a {
      padding: 0.8rem 2rem;
      font-size: 0.8rem;
    }
    
    .info h2 {
      font-size: 1.5rem;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    :root {
      --button: hsl(44, 0%, 30%);
      --button-color: hsl(0, 0%, 98%);
      --shadow: hsl(0, 0%, 20%);
      --bg: hsl(53, 0%, 15%);
      --header: hsl(53, 0%, 25%);
      --color: hsl(0, 0%, 85%);
      --lit-header: hsl(53, 0%, 60%);
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .error-page h1,
    .error-page h1:after,
    .cloak {
      animation: none;
    }
    
    .error-page h1 {
      --x: 50%;
      background: var(--lit-header);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }
  }
</style>
