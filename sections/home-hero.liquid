<section class="parallax-hero" data-bg="{{ section.settings.background | image_url: width: 2000 }}">
  <div class="parallax-layer layer-back" aria-hidden="true"></div>
  <div class="parallax-layer layer-mid" aria-hidden="true"></div>
  <div class="overlay"></div>
  <div class="content reveal">
    <h1>{{ settings.hero_title | default: "Picture Perfect Posters" }}</h1>
    <p>{{ settings.hero_subtitle | default: "TV, Movies, Soccer, Musicâ€”curated prints for every wall." }}</p>
    <div class="hero-buttons">
      <a class="btn-primary btn-teal" href="{{ settings.hero_button_1_link | default: '/collections/bestsellers' }}">
        {{ settings.hero_button_1_text | default: "Shop Bestsellers" }}
      </a>
      <a class="btn-primary btn-purple" href="{{ settings.hero_button_2_link | default: '/collections/all' }}">
        {{ settings.hero_button_2_text | default: "Explore Collections" }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home hero",
  "settings": [
    {"type": "image_picker", "id": "background", "label": "Background image"},
    {"type": "text", "id": "heading", "label": "Heading", "default": "Iconic Movie Posters"},
    {"type": "text", "id": "subheading", "label": "Subheading", "default": "Collect the scenes you love."},
    {"type": "text", "id": "cta_label", "label": "CTA label", "default": "Shop Posters"},
    {"type": "url", "id": "cta_link", "label": "CTA link", "default": "/collections/all"}
  ],
  "presets": [{"name": "Home hero"}]
}
{% endschema %}
