<section class="featured-posters">
  <div style="max-width:1400px;margin:0 auto;padding:80px 24px;">
    <div class="posters-grid">
      <a href="{{ settings.poster_1_link | default: '/collections/tv-movies' }}" class="poster-card poster-small reveal" data-tilt="left" data-poster-nav="true">
        <div class="poster-image" style="background-image: {% if settings.poster_1_image %}{{ settings.poster_1_image | image_url: width: 800 }}{% else %}linear-gradient(135deg, #ff6b35, #f7931e){% endif %};">
          <div class="poster-overlay">
            <h3>{{ settings.poster_1_title | default: "THE NIGHT TERROR" }}</h3>
          </div>
        </div>
        <div class="poster-category">{{ settings.poster_1_category | default: "TV & Movies" }}</div>
      </a>
      
      <a href="/collections/games" class="poster-card poster-large reveal" data-tilt="center" data-debug="games-button" data-poster-nav="true">
        <div class="poster-image" style="background-image: {% if settings.poster_2_image %}{{ settings.poster_2_image | image_url: width: 800 }}{% else %}linear-gradient(135deg, #667eea, #764ba2){% endif %};">
          <div class="poster-overlay">
            <h3>{{ settings.poster_2_title | default: "BEYOND EARTH" }}</h3>
          </div>
        </div>
        <div class="poster-category">{{ settings.poster_2_category | default: "Games" }}</div>
      </a>
      
      <a href="{{ settings.poster_3_link | default: '/collections/music' }}" class="poster-card poster-large reveal" data-tilt="center" data-poster-nav="true">
        <div class="poster-image" style="background-image: {% if settings.poster_3_image %}{{ settings.poster_3_image | image_url: width: 800 }}{% else %}linear-gradient(135deg, #11998e, #38ef7d){% endif %};">
          <div class="poster-overlay">
            <h3>{{ settings.poster_3_title | default: "STRIKER" }}</h3>
          </div>
        </div>
        <div class="poster-category">{{ settings.poster_3_category | default: "Music" }}</div>
      </a>
      
      <a href="{{ settings.poster_4_link | default: '/collections/sports' }}" class="poster-card poster-small reveal" data-tilt="right" data-poster-nav="true">
        <div class="poster-image" style="background-image: {% if settings.poster_4_image %}{{ settings.poster_4_image | image_url: width: 800 }}{% else %}linear-gradient(135deg, #667eea, #764ba2, #f093fb){% endif %};">
          <div class="poster-overlay">
            <h3>{{ settings.poster_4_title | default: "SOUND & VISION" }}</h3>
          </div>
        </div>
        <div class="poster-category">{{ settings.poster_4_category | default: "Sports" }}</div>
      </a>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Featured posters",
  "settings": [
    {"type": "collection", "id": "collection", "label": "Collection"},
    {"type": "range", "id": "limit", "label": "Products to show", "min": 3, "max": 12, "step": 3, "default": 6},
    {
      "type": "header",
      "content": "Poster 1 - TV & Movies"
    },
    {"type": "image_picker", "id": "poster_1_image", "label": "Poster 1 Image"},
    {"type": "text", "id": "poster_1_title", "label": "Poster 1 Title", "default": "THE NIGHT TERROR"},
    {"type": "text", "id": "poster_1_category", "label": "Poster 1 Category", "default": "TV & Movies"},
    {"type": "url", "id": "poster_1_link", "label": "Poster 1 Link", "default": "/collections/tv-movies"},
    {
      "type": "header",
      "content": "Poster 2 - Games"
    },
    {"type": "image_picker", "id": "poster_2_image", "label": "Poster 2 Image"},
    {"type": "text", "id": "poster_2_title", "label": "Poster 2 Title", "default": "BEYOND EARTH"},
    {"type": "text", "id": "poster_2_category", "label": "Poster 2 Category", "default": "Games"},
    {"type": "url", "id": "poster_2_link", "label": "Poster 2 Link", "default": "/collections/games"},
    {
      "type": "header",
      "content": "Poster 3 - Music"
    },
    {"type": "image_picker", "id": "poster_3_image", "label": "Poster 3 Image"},
    {"type": "text", "id": "poster_3_title", "label": "Poster 3 Title", "default": "STRIKER"},
    {"type": "text", "id": "poster_3_category", "label": "Poster 3 Category", "default": "Music"},
    {"type": "url", "id": "poster_3_link", "label": "Poster 3 Link", "default": "/collections/music"},
    {
      "type": "header",
      "content": "Poster 4 - Sports"
    },
    {"type": "image_picker", "id": "poster_4_image", "label": "Poster 4 Image"},
    {"type": "text", "id": "poster_4_title", "label": "Poster 4 Title", "default": "SOUND & VISION"},
    {"type": "text", "id": "poster_4_category", "label": "Poster 4 Category", "default": "Sports"},
    {"type": "url", "id": "poster_4_link", "label": "Poster 4 Link", "default": "/collections/sports"}
  ],
  "presets": [{"name": "Featured posters"}]
}
{% endschema %}
