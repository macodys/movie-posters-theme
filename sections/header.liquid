<section class="site-header">
  <div class="header-inner">
    <a href="/" class="logo">
      <span class="logo-text">PICTURE PERFECT POSTER</span>
    </a>
    <a class="diamond" href="#">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960" fill="currentColor">
        <path d="M480-120 80-600l120-240h560l120 240-400 480Zm-95-520h190l-60-120h-70l-60 120Zm55 347v-267H218l222 267Zm80 0 222-267H520v267Zm144-347h106l-60-120H604l60 120Zm-474 0h106l60-120H250l-60 120Z" />
      </svg>
    </a>
    <nav>
      <ul aria-hidden="true" class="lit">
        <li>TV & Movies</li>
        <li>Games</li>
        <li>Music</li>
        <li>Sports</li>
      </ul>
      <ul class="content">
        <li>
          <a data-active="true" href="/collections/tv-movies"><span>TV & Movies</span></a>
        </li>
        <li>
          <a href="/collections/games"><span>Games</span></a>
        </li>
        <li>
          <a href="/collections/music"><span>Music</span></a>
        </li>
        <li>
          <a href="/collections/sports"><span>Sports</span></a>
        </li>
      </ul>
    </nav>
    <div class="header-actions">
      <div class="search-container">
        <div class="search-box">
          <input type="text" class="search-input" placeholder="Search posters..." />
          <div class="search-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
          </div>
        </div>
      </div>
      <button class="cart-button" id="cart-button" aria-label="Shopping Cart">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="m1 1 4 4 13 1 2 8H6"></path>
        </svg>
        <span class="cart-count" id="cart-count">0</span>
      </button>
      <a class="profile-link" href="/account" aria-label="Account">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </a>
      <button class="menu-toggle" aria-expanded="false" aria-controls="mobile-menu">Menu</button>
    </div>
  </div>
  <div id="mobile-menu" class="mobile-menu" hidden>
    <ul>
      <li><a href="/collections/tv-movies">TV & Movies</a></li>
      <li><a href="/collections/games">Games</a></li>
      <li><a href="/collections/music">Music</a></li>
      <li><a href="/collections/sports">Sports</a></li>
    </ul>
  </div>
  
  <!-- Cart Dropdown -->
  <div id="cart-dropdown" class="cart-dropdown" hidden>
    <div class="cart-header">
      <h3>Shopping Cart</h3>
      <button class="cart-close" id="cart-close" aria-label="Close Cart">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div class="cart-items" id="cart-items">
      <div class="cart-empty">
        <p>Your cart is empty</p>
        <a href="/collections/all" class="btn-primary">Continue Shopping</a>
      </div>
    </div>
    <div class="cart-footer" id="cart-footer" hidden>
      <div class="cart-total">
        <span class="total-label">Total:</span>
        <span class="total-amount" id="cart-total">$0.00</span>
      </div>
      <div class="cart-actions">
        <a href="/cart" class="btn-secondary">View Cart</a>
        <a href="/checkout" class="btn-primary">Checkout</a>
      </div>
    </div>
  </div>
  
  <!-- Spotlight Filters -->
  <svg class="sr-only">
    <filter id="spotlight">
      <feGaussianBlur
        in="SourceAlpha"
        stdDeviation="3"
        result="blur"
      ></feGaussianBlur>
      <feSpecularLighting
        result="lighting"
        in="blur"
        surfaceScale="5"
        specularConstant="0.5"
        specularExponent="120"
        lighting-color="#ffffff"
      >
        <fePointLight x="50" y="50" z="300"></fePointLight>
      </feSpecularLighting>
      <feComposite
        in="lighting"
        in2="SourceAlpha"
        operator="in"
        result="composite"
      ></feComposite>
      <feComposite
        in="merged"
        in2="composite"
        operator="arithmetic"
        k1="0"
        k2="1"
        k3="1"
        k4="0"
        result="litPaint"
      ></feComposite>
    </filter>
    <filter id="ambience">
      <feGaussianBlur
        in="SourceAlpha"
        stdDeviation="3"
        result="blur"
      ></feGaussianBlur>
      <feSpecularLighting
        result="lighting"
        in="blur"
        surfaceScale="5"
        specularConstant="0.5"
        specularExponent="120"
        lighting-color="#ffffff"
      >
        <fePointLight x="50" y="50" z="300"></fePointLight>
      </feSpecularLighting>
      <feComposite
        in="lighting"
        in2="SourceAlpha"
        operator="in"
        result="composite"
      ></feComposite>
      <feComposite
        in="merged"
        in2="composite"
        operator="arithmetic"
        k1="0"
        k2="1"
        k3="1"
        k4="0"
        result="litPaint"
      ></feComposite>
    </filter>
  </svg>
</section>
{% schema %}
{
  "name": "Header",
  "settings": [
    {"type": "image_picker", "id": "logo", "label": "Logo"},
    {"type": "link_list", "id": "main_menu", "label": "Main menu", "default": "main-menu"}
  ]
}
{% endschema %}
